%body
    = render 'navbar'
%h2.text-center Groceries

.wrapper
    %aside.aside.aside-l
        %header.title Breakfast
        %table
            %tbody
                %tr
                - @breakfast.each do |recipe|
                    %tr
                        %td= recipe.title 
                    - recipe.groceries.each do |grocery|
                        %tr
                            %td= grocery.name
                            %td= "#{grocery.weight_in_grams} grams"

    %aside.aside.aside-d
        %header.title Lunch
        %table
            %tbody
                - @lunch.each do |recipe|
                    %tr
                        %td= recipe.title 
                    - recipe.groceries.each do |grocery|
                        %tr
                            %td= grocery.name
                            %td= "#{grocery.weight_in_grams} grams"

    %aside.aside.aside-d
        %header.title Dinner
        %table
            %tbody
                - @dinner.each do |recipe|
                    %tr
                        %td= recipe.title 
                    - recipe.groceries.each do |grocery|
                        %tr
                            %td= grocery.name
                            %td= "#{grocery.weight_in_grams} grams"

